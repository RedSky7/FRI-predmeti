<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/favorites"
    android:onClick="startMainActivity">


    <!--
    <com.github.lzyzsd.circleprogress.CircleProgress
        android:id="@+id/circle_progress"
        app:circle_progress="52"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        app:circle_finished_color="@color/colorAccent"
        app:circle_text_size="16sp"

        app:circle_unfinished_color="@color/lightGray" />


-->

    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        app:cardElevation="3dp"
        app:cardCornerRadius="0dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:id="@+id/card">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/fl">

                    <ImageView
                        android:id="@+id/imageViewTOANIMATE"
                        android:layout_weight="0"
                        android:background="@drawable/ic_circle"
                        android:layout_height="64dp"
                        android:layout_width="64dp"
                        android:layout_gravity="center" />

                    <ImageView
                        app:srcCompat="@drawable/ic_polygonal_chart_of_triangles"
                        android:id="@+id/imageView14"
                        android:tint="@android:color/white"
                        android:layout_gravity="center"
                        android:layout_height="46dp"
                        android:layout_width="46dp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/fl2">

                    <com.github.lzyzsd.circleprogress.CircleProgress
                        android:id="@+id/percent"
                        app:circle_progress="52"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center_horizontal"
                        app:circle_finished_color="@color/colorAccent"
                        app:circle_text_size="0dp"
                        app:circle_unfinished_color="@color/lightGray" />

                    <TextView
                        android:text="49%"
                        android:id="@+id/percent2"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif-medium"
                        android:layout_gravity="center_horizontal"
                        android:textColorLink="@color/colorPrimary"
                        android:layout_height="64dp"
                        android:layout_width="64dp"
                        android:textSize="16sp" />

                    <TextView
                        android:text="(61)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/number"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:textColor="@android:color/white"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp" />
                </FrameLayout>
            </FrameLayout>


            <TextView
                android:text="Umetna inteligenca"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-medium"
                android:layout_width="match_parent"
                android:layout_weight="0"
                android:maxLines="2" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>