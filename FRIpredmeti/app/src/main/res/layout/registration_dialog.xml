<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_main2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/allBoxes"
            android:layout_below="@+id/glava">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="24dp"
                android:id="@+id/rl">

                <!--<include layout="@layout/therapy_main" />-->

                <TextView
                    android:text="Registracija"
                    android:id="@+id/therapy_name_main"
                    style="@android:style/Widget.Material.TextView"
                    android:textAppearance="@android:style/TextAppearance.Material.Title"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp" />

                <TextView
                    android:text="Pod vašim e-mail naslovom še ni registriranega nobenega uporabnika. Prosimo vnesite svoje novo uporabniško ime, ki ga boste uporabljali."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/therapy_desc_main"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_below="@+id/therapy_name_main"
                    style="@android:style/Theme.Material.Light.Dialog"
                    android:textSize="16sp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/therapy_desc_main"
                    android:layout_marginTop="16dp">

                    <EditText
                        android:id="@+id/tvUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/editText"
                        android:ems="10"
                        android:hint="Uporabniško ime"
                        android:inputType="textMultiLine"
                        android:textSize="16sp" />

                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>


        </RelativeLayout>

        <Button
            android:id="@+id/btnRegistration"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/allBoxes"
            android:layout_alignParentBottom="false"
            android:layout_below="@id/allBoxes"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false"
            android:layout_marginRight="8dp"
            android:text="Registracija"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored" />

        <Button
            android:text="Prekliči"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancel"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
            android:layout_toStartOf="@+id/btnRegistration"
            android:layout_below="@+id/allBoxes" />

    </RelativeLayout>
