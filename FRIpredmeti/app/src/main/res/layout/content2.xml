<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sw">
<RelativeLayout

    android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@color/cardview_shadow_end_color">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="3dp"
        android:id="@+id/cv_three"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:id="@+id/basic"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/success">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <com.github.lzyzsd.circleprogress.DonutProgress
                    android:id="@+id/donut_progress"
                    app:donut_finished_color="@color/colorPrimary"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:layout_gravity="center_horizontal"
                    app:donut_circle_starting_degree="270" />
                <ImageView
                    android:text="49%"
                    android:id="@+id/imSlika"
                    android:layout_weight="1"
                    android:background="@drawable/ic_circle"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center"
                    android:textColorLink="@color/colorPrimary"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_height="64dp"
                    android:layout_width="64dp"
                    android:textSize="16sp" />

            </FrameLayout>
            <TextView
                android:text="prof."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvNaziv"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/favorites">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <com.github.lzyzsd.circleprogress.DonutProgress
                    android:id="@+id/donut_progress"
                    app:donut_finished_color="@color/colorPrimary"
                    app:donut_progress="49"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:layout_gravity="center_horizontal"
                    app:donut_circle_starting_degree="270" />
                <TextView
                    android:text="49%"
                    android:id="@+id/textView55"
                    android:layout_weight="1"
                    android:background="@drawable/ic_circle"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center"
                    android:textColorLink="@color/colorPrimary"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_height="64dp"
                    android:layout_width="64dp"
                    android:textSize="16sp" />

                <TextView
                    android:text="(61)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/te"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20dp" />
            </FrameLayout>
            <TextView
                android:text="Priljubljenost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvPriljbuljenost"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/difficulty">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <com.github.lzyzsd.circleprogress.DonutProgress
                    android:id="@+id/donut_progress"
                    app:donut_finished_color="@color/colorPrimary"
                    app:donut_progress="49"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:layout_gravity="center_horizontal"
                    app:donut_circle_starting_degree="270" />
                <TextView
                    android:text="/?"
                    android:id="@+id/textView55"
                    android:layout_weight="1"
                    android:background="@drawable/ic_circle"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center"
                    android:textColorLink="@color/colorPrimary"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_height="64dp"
                    android:layout_width="64dp"
                    android:textSize="16sp" />

                <TextView
                    android:text="(61)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/te"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20dp" />
            </FrameLayout>
            <TextView
                android:text="/?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/unknown"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

    </LinearLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pre"
        android:layout_below="@+id/cv_three"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:text="Predmeti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:fontFamily="sans-serif-medium"
            android:layout_below="@+id/cv_three"
            android:layout_marginBottom="16dp" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_view_teacher_overview_PREDMETI"
            android:layout_below="@+id/textView5" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/staff"
        android:layout_below="@+id/tech"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp"
            android:text="Kontakt" />

        <ImageView
            android:layout_width="6dp"
            android:layout_height="16dp"
            app:srcCompat="@drawable/ic_square"
            android:id="@+id/imageView4"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/imageView3"
            android:layout_marginTop="30dp" />

        <TextView
            android:text="janez.primer@fri.uni-lj.si"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teacherContact"
            android:layout_weight="1"
            android:layout_alignParentTop="false"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="26dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pre"
        android:id="@+id/tech"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:text="Tehnologije"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView4"
            android:id="@+id/recycler_view_teacher_overview_TEHNOLOGIJE" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/comm"
        android:layout_below="@+id/staff"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:text="Komentarji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:layout_below="@+id/textView14"
            android:layout_marginBottom="16dp"
            android:textAppearance="@android:style/TextAppearance.Material.Caption"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spinnerSortBy"
            style="@android:style/Widget.DeviceDefault.Light.Spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:entries="@array/sort"
            android:gravity="right|center_vertical" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView15"
            android:id="@+id/fl">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_teacher_overview_COMMENTS"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

    </RelativeLayout>


</RelativeLayout>
</ScrollView>